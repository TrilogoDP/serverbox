<div class="form-group">
	<label class="col-sm-3 control-label">{{ ns_text_status }}</label>
	<div class="col-sm-9">
		<div class="radio-group-infinity">
			{% if (ls_microdata_status is defined and (ls_microdata_status == 1)) %}
			<input id="smicrodata_status_yes" class="hide-radio" type="radio" name="ls_microdata_status" value="1" checked="checked" />
			<label for="smicrodata_status_yes">{{ text_yes }}</label>
			{% else %}
			<input id="smicrodata_status_yes" class="hide-radio" type="radio" name="ls_microdata_status" value="1" />
			<label for="smicrodata_status_yes">{{ text_yes }}</label>
			{% endif %}
			{% if (ls_microdata_status is not defined or (ls_microdata_status == 0)) %}
			<input id="smicrodata_status_no" class="hide-radio" type="radio" name="ls_microdata_status" value="0" checked="checked" />
			<label for="smicrodata_status_no">{{ text_no }}</label>
			{% else %}
			<input id="smicrodata_status_no" class="hide-radio" type="radio" name="ls_microdata_status" value="0" />
			<label for="smicrodata_status_no">{{ text_no }}</label>
			{% endif %}
		</div>
	</div>
</div>
