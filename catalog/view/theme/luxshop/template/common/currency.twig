{% if currencies|length > 1 %}
<div class="pull-left">
<form action="{{ action }}" method="post" enctype="multipart/form-data" id="currency">
  <div class="btn-group">
    <button class="btn-currency-top dropdown-toggle" data-toggle="dropdown">
    {% for currency in currencies %}
    {% if (currency.symbol_left and currency.code == code) %}
    <strong>{{ currency.symbol_left }}</strong>
    {% elseif (currency.symbol_right and currency.code == code) %}
    <strong>{{ currency.symbol_right }}</strong>
    {% endif %}
    {% endfor %}
    <span class="text-currency hidden">{{ text_currency }}</span></button>
    <ul class="dropdown-menu dropdown-menu-right ls-dropdown">
     {% for currency in currencies %}
      {% if (currency.symbol_left) %}
        {% if (currency.code == code) %}
          <li class="active"><button class="currency-select btn btn-link btn-block" type="button" name="{{ currency.code }}">{{ currency.symbol_left }} <span class="currency__title">{{ currency.title }}</span></button></li>
        {% else %}
          <li><button class="currency-select btn btn-link btn-block" type="button" name="{{ currency.code }}">{{ currency.symbol_left }} <span class="currency__title">{{ currency.title }}</span></button></li>
        {% endif %}
      {% else %}
        {% if (currency.code == code) %}
           <li class="active"><button class="currency-select btn btn-link btn-block" type="button" name="{{ currency.code }}">{{ currency.symbol_right }} <span class="currency__title">{{ currency.title }}</span></button></li>
        {% else %}
           <li><button class="currency-select btn btn-link btn-block" type="button" name="{{ currency.code }}">{{ currency.symbol_right }} <span class="currency__title">{{ currency.title }}</span></button></li>
        {% endif %}
      {% endif %}
      {% endfor %}
    </ul>
  </div>
  <input type="hidden" name="code" value="" />
  <input type="hidden" name="redirect" value="{{ redirect }}" />
</form>
</div>
{% endif %}
