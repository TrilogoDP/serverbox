<div class="container-module">
<div id="banner{{ module }}" class="banner-ns carousel-container image-hover-effect">
  {% for banner in banners %}
  <div class="item">
    {% if (banner.link) %}
    <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>
    {% else %}
    <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
    {% endif %}
  </div>
  {% endfor %}
</div>
<script>
var count_img = $("#banner{{ module }} div.item").length;
if(count_img > 1) {
$("#banner{{ module }}").slick({
  autoplay: true,
  infinite: true,
  adaptiveHeight: false,
  slidesToShow: 1,
  fade: true,
  dots: true,
  arrows:false,
  dotsClass: 'slick-dots slideshow',
})
} else {
  $("#banner{{ module }}").removeClass('owl-carousel');
}
</script>
</div>